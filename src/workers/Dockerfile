FROM node:20 AS dependencies

WORKDIR /app
COPY package*.json .
RUN npm ci

FROM node:20 AS worker

WORKDIR /app
COPY --from=dependencies /app/node_modules ./node_modules
RUN apt-get update && apt-get install -y \
  libglib2.0-0 \
  libnss3 \
  libnspr4 \
  libdbus-1-3 \
  libatk1.0-0 \
  libatk-bridge2.0-0 \
  libcups2 \
  libglib2.0-dev \
  libexpat1 \
  libx11-6 \
  libxcomposite1 \
  libxdamage1 \
  libxext6 \
  libxfixes3 \
  libxrandr2 \
  libgbm1 \
  libxcb1 \
  libxkbcommon0 \
  libpango-1.0-0 \
  libcairo2 \
  libasound2 \
  libatspi2.0-0
RUN npx --yes playwright install
COPY . .
CMD ["npx", "tsx", "src/workers/Worker.ts"]
